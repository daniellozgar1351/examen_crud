@model UsuariosDatos
@{
    ViewBag.Title = "Nuevo";
}

<h2>Nuevo Usuario</h2>
<hr />

<form method="post" action="@Url.Action("Nuevo","Usuarios")">
  
    <div class="form-group">
        <label>Nombre</label>
        @Html.TextBoxFor(x => x.name, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Correo</label>
        @Html.TextBoxFor(x => x.email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Dirección</label>
        @Html.TextBoxFor(x => x.direccion, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Teléfono</label>
        @Html.TextBoxFor(x => x.telefono, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Fecha de nacimiento</label>
        @Html.TextBoxFor(x => x.fechaNacimiento, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <input type="submit" class="btn-success" value="Enviar" />
        <a href="@Url.Action("Index","Usuarios")">Regresar</a>
    </div>
</form>
